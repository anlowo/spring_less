<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:application.properties"/>

    <bean id="myPet" class="com.example.spring_less.lesson1.application_context.Dog">
    </bean>

    <bean id="myPet1" class="com.example.spring_less.lesson1.application_context.Cat">
    </bean>

<!--    <bean id="myPerson" class="com.example.spring_less.com.example.spring_less.Person">-->
<!--        <constructor-arg ref="myPet"/>-->
<!--    </bean>-->
    <bean id="myPerson" class="com.example.spring_less.lesson2.application_context2.Person">
        <property name="pet" ref="myPet"/>
        <property name="name" value="${person.name}"/>
        <property name="age" value="${person.age}"/>
    </bean>
</beans>

